
public class Teacher extends Person implements checkHomeworks {
	private String subject;

	public Teacher() {
		setFirstName("");
		setLastName("");
		setYearsOfExperience(0);
		setSubject("");

	}

	public Teacher(String firstName, String lastName, int yearsOfExperience, String subject) {
		this();
		setFirstName(firstName);
		setLastName(lastName);
		setYearsOfExperience(yearsOfExperience);
		setSubject(subject);

	}

	public String getSubject() {
		return subject;
	}

	public void setSubject(String subject) {
		this.subject = subject;
	}

	public void checkHomeworks() {
		System.out.println("I can check homeworks!");

	}

	public void sayHello() {
		System.out.println("Hello, everyone!");
	}

	public void sayGoodbye() {
		System.out.println("Goodbye!");
	}

}
